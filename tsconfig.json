{
  "linterOptions": {
    "exclude": ["src/uikit/*", "src/uikit/"],
  },
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
 
    
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "strict": false,
    "checkJs": false,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "react-spring",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "cypress"
  ],
  "include": [
    "src"
  ]
}
